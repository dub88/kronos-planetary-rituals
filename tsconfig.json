{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/utils/*": ["utils/*"],
      "@/stores/*": ["stores/*"],
      "@/services/*": ["services/*"],
      "@/types": ["types/index"],
      "@/app/*": ["app/*"]
    },
    "typeRoots": ["./node_modules/@types", "./app/types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "pwa-next/**",
    "coverage/**"
  ]
}
